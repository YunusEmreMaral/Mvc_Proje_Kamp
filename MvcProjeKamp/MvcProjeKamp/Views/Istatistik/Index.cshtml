
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div style="display: flex; justify-content: space-around; margin-top: 20px;">
    <div style="background-color: #FFD700; padding: 10px; text-align: center;">
        <p>Toplam Kategori Sayısı</p>
        <p>@ViewBag.ToplamKategoriSayisi</p>
    </div>

    <div style="background-color: #00CED1; padding: 10px; text-align: center;">
        <p>Yazılım Kategorisi Başlık Sayısı</p>
        <p>@ViewBag.YazilimKategorisiBaslikSayisi</p>
    </div>

    <div style="background-color: #32CD32; padding: 10px; text-align: center;">
        <p>A Harfili Yazar Sayısı</p>
        <p>@ViewBag.AHarfiliYazarSayisi</p>
    </div>

    <div style="background-color: #FF6347; padding: 10px; text-align: center;">
        <p>En Fazla Başlığa Sahip Kategori Adı</p>
        <p>@ViewBag.EnFazlaBasligaSahipKategoriAdi</p>
    </div>

    <div style="background-color: #9370DB; padding: 10px; text-align: center;">
        <p>Kategori Durum Farkı</p>
        <p>Aktif: @ViewBag.DurumFarki[true], Pasif: @ViewBag.DurumFarki[false]</p>
    </div>
</div>

