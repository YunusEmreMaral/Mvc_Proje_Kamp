@using EntityLayer.Concrete
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Heading>
@{
    ViewBag.Title = "AllHeadings";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}


@{ string color = "";}


<!DOCTYPE html>
<html>

<body class="hold-transition sidebar-mini">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Başlıklarım</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Başlık İşlemleri</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 1%">
                                #
                            </th>
                            <th style="width: 20%">
                                Başlık Adı
                            </th>
                            <th style="width: 30%">
                                Oluşturan Yazar
                            </th>

                            <th style="width: 8%" class="text-center">
                                Kategori
                            </th>
                            <th style="width: 30%">
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            string headingColor = " ";
                            string name = " ";

                            if (item.HeadingStatus == true)
                            {
                                headingColor = "badge badge-success";
                                name = "PASİF YAP";
                            }
                            else if (item.HeadingStatus == false)
                            {
                                headingColor = "badge badge-danger";
                                name = "AKTİF YAP";
                            }



                            switch (item.Category.CategoryName)
                            {
                                case "Yazılım":
                                    color = "badge badge-info";
                                    break;
                                case "Tiyatro":
                                    color = "badge badge-warning";
                                    break;
                                case "Film":
                                    color = "badge badge-secondary";
                                    break;
                                case "Spor":
                                    color = "badge badge-success";
                                    break;
                                case "Teknoloji":
                                    color = "badge badge-primary";
                                    break;
                                case "Sağlık":
                                    color = "badge badge-danger";
                                    break;
                                case "Seyahat":
                                    color = "badge badge-info";
                                    break;
                                case "Otomobil":
                                    color = "badge badge-dark";
                                    break;
                                case "Edebiyat":
                                    color = "badge badge-success";
                                    break;
                                case "Müzik":
                                    color = "badge badge-primary";
                                    break;
                                case "Gastronomi":
                                    color = "badge badge-danger";
                                    break;
                                case "Doğa ve Çevre":
                                    color = "badge badge-secondary";
                                    break;
                                case "Eğitim":
                                    color = "badge badge-warning";
                                    break;
                                // Ek kategorileri buraya ekleyebilirsiniz.
                                default:
                                    color = "badge badge-light";
                                    break;
                            }


                            <tr>
                                <td>
                                    @item.HeadingID
                                </td>
                                <td>
                                    <a>
                                        @item.HeadingName

                                    </a>
                                    <br />
                                    <small>
                                        @(((DateTime)item.HeadingDate).ToString("dd-MM-yyyy"))

                                    </small>
                                </td>
                                <td>
                                    <ul class="list-inline">
                                        <li class="list-inline-item">
                                            <img alt="Avatar" class="table-avatar" src="@item.Writer.WriterImage">
                                        </li>
                                    </ul>
                                </td>

                                <td class="project-state">
                                    <span class=" @color">@item.Category.CategoryName</span>
                                </td>
                                <td class="project-actions text-right">
                                    <a class="btn btn-primary btn-sm" href="/Default/Headings/@item.HeadingID">
                                        <i class="fas fa-folder">
                                        </i>
                                        Yazılar
                                    </a>
                                    <a class="btn btn-info btn-sm" href="/WriterPanelContent/AddContent/@item.HeadingID">
                                        <i class="fas fa-pencil-alt">
                                        </i>
                                        Bu Başlığa Yaz
                                    </a>

                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </section>
</body>
</html>
@Html.PagedListPager((IPagedList)Model, page => Url.Action("AllHeadings", new { sayfa = page }), new PagedListRenderOptions { LiElementClasses = new List<string> { "page-link" } })

