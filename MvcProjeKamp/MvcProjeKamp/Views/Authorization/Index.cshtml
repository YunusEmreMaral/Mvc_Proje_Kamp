@using EntityLayer.Concrete
@model List<Admin>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
    <h2>Kategoriler</h2>
    <br />
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Kullanıcı Mail</th>
            <th>Yetki</th>
            <th>Status</th>
            <th>Pasif</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <th>@item.AdminID</th>
                <td>@item.AdminUserName</td>
                <td>@item.AdminRole</td>
                <td>Aktif</td>
                <td><a href="/Authorization/DeleteCategory/@item.AdminID" class="btn btn-danger">Pasif Yap</a> </td>
                <td><a href="/Authorization/EditAdmin/@item.AdminID" class="btn btn-warning">Güncelle</a> </td>
            </tr>

        }

    </table>
    <br />
    <a href="/Authorization/AddAdmin/" class=" btn btn-info">Yeni Admin Tanımla</a>


